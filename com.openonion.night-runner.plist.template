<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.openonion.night-runner</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>__SCRIPT_DIR__/run-daemon.sh</string>
    </array>

    <!-- Run every 30 minutes -->
    <key>StartInterval</key>
    <integer>1800</integer>

    <!-- Allow background children to outlive the job -->
    <key>AbandonProcessGroup</key>
    <true/>

    <key>WorkingDirectory</key>
    <string>__SCRIPT_DIR__</string>

    <key>StandardOutPath</key>
    <string>__SCRIPT_DIR__/logs/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>__SCRIPT_DIR__/logs/launchd-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/opt/coreutils/libexec/gnubin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:__HOME__/.claude/local</string>
        <key>HOME</key>
        <string>__HOME__</string>
        <key>http_proxy</key>
        <string>http://localhost:8888</string>
        <key>https_proxy</key>
        <string>http://localhost:8888</string>
    </dict>
</dict>
</plist>
